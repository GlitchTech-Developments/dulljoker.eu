{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"verbatimModuleSyntax": true,

		"jsx": "react-jsx",
		"jsxImportSource": "react",

		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],

		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
